{
    "extends": "solhint:recommended",
    "rules": {
      "func-order": "off",
      "mark-callable-contracts": "off",
      "compiler-version": "off",
      "reason-string": "off",
      "no-inline-assembly": "off",
      "avoid-low-level-calls": "off",
      "not-rely-on-time": "off",
      "func-visibility": ["error", { "ignoreConstructors": true }]
    }
  }